<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:id="@+id/cardView"
    app:cardElevation="10dp"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@color/darkblue">

            <ImageView
                android:id="@+id/cardImageView"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:src="@drawable/ic_avengers"
                android:scaleType="centerCrop"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/likeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/cardTextView">

                    <TextView
                        android:id="@+id/cardTextViewLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textSize="9dp"
                        android:paddingTop="4dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/cardTextLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Likes"
                        android:textSize="7sp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/white"/>

                </LinearLayout>


                <ImageButton
                    android:layout_toStartOf="@+id/cardTextView"
                    android:layout_below="@+id/likeLayout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="7dp"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:src="@drawable/thumb_up_scale"/>







                <TextView
                    android:id="@+id/cardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Avengers"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_below="@+id/followLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="7dp"
                    android:layout_centerHorizontal="true"
                    android:text="Share"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                   />



                <LinearLayout
                    android:id="@+id/followLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/cardTextView">

                <TextView
                    android:id="@+id/cardTextViewFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="9dp"
                    android:paddingTop="4dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/cardTextFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow"
                    android:textSize="7sp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"/>


                </LinearLayout>

                <ImageButton
                    android:layout_toEndOf="@+id/cardTextView"
                    android:layout_below="@+id/followLayout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_favorite_border_black_24dp"/>



            </RelativeLayout>



        </LinearLayout>



    </android.support.v7.widget.CardView>

