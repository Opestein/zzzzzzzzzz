<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerToggle</item>
        <!--<item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>-->
        <item name="android:statusBarColor">@color/darkblue</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Nav" parent="Widget.Design.NavigationView" >
        <item name="android:color">@color/white</item>
        <item name="android:colorBackground">@color/lightblue</item>

    </style>

    <style name="AppTheme.DrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle" >
        <item name="color">@color/white</item>
        <item name="spinBars">true</item>

    </style>

</resources>
